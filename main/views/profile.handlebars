<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Smoothie Recipe:</h3>

    <form class="form new-recipe-form">
      <div class="form-group">
        <label for="recipe-name">recipe name:</label>
        <input class="form-input" type="text" id="recipe-name" name="recipe-name" />
      </div>
      <div class="form-group ingredientbtn">
      <p><label for="recipe-funding">Choose your ingredients (max 4):</label></p>
        <img class="ingredientbtn" id="strawberry" src="https://via.placeholder.com/120">
        <img class="ingredientbtn" id="banana" src="https://via.placeholder.com/120">
        <img class="ingredientbtn" id="blueberry" src="https://via.placeholder.com/120">
        <img class="ingredientbtn" src="https://via.placeholder.com/120">
        <img class="ingredientbtn" src="https://via.placeholder.com/120">
        <img class="ingredientbtn" src="https://via.placeholder.com/120">
        <img class="ingredientbtn" src="https://via.placeholder.com/120">
        <img class="ingredientbtn" src="https://via.placeholder.com/120">
      </div>
      <div class="form-group">
      <p><label for="recipe-funding">Choose one base:</label></p>
        <img src="https://via.placeholder.com/120">
        <img src="https://via.placeholder.com/120">
        <img src="https://via.placeholder.com/120">
        <img src="https://via.placeholder.com/120">
      </div>     
      <div class="form-group">
        <label for="recipe-desc">description:</label>
        <textarea class="form-input" id="recipe-desc" name="recipe-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if recipes.length}}
  <div class="col-md-6 recipe-list">
    <h3>Current Recipes:</h3>

    {{#each recipes as |recipe|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/recipe/{{recipe.id}}">{{recipe.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{recipe.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
